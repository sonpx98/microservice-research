{
  "name": "module-federation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "pnpm lerna run --parallel start",
    "build": "pnpm lerna run build",
    "preview": "pnpm lerna run --parallel preview",
    "start:dev": "pnpm lerna run start --scope=portfolio-home --scope=flash-card-fav --scope=tarot --scope=snake-game --scope=video-editor --parallel",
    "start:remotes": "pnpm build:remotes && pnpm preview:remotes",
    "start:portfolio": "cd packages/portfolio-home && pnpm start",
    "build:remotes": "pnpm lerna run build --scope=flash-card-fav --scope=tarot --scope=snake-game --scope=video-editor --parallel",
    "preview:remotes": "pnpm lerna run preview --scope=flash-card-fav --scope=tarot --scope=snake-game --scope=video-editor --parallel",
    "stop": "kill-port"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@tailwindcss/vite": "^4.1.13",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "lerna": "^4.0.0",
    "vite": "^7.1.6"
  }
}
